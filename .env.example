# ============================================================
# Lagedra — Environment Variable Template
# Copy to .env and fill in your values.
# NEVER commit .env to version control.
# ============================================================

# ── PostgreSQL ───────────────────────────────────────────────
POSTGRES_USER=lagedra
POSTGRES_PASSWORD=change_me_in_prod
POSTGRES_DB=lagedra_db
POSTGRES_PORT=5432

# ── Ports ────────────────────────────────────────────────────
API_HTTP_PORT=8080
WEB_PORT=3000
ADMIN_PORT=3001
MARKETING_PORT=3002
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
CLAMAV_PORT=3310

# ── ASP.NET Core ─────────────────────────────────────────────
ASPNETCORE_ENVIRONMENT=Development

# ── JWT ──────────────────────────────────────────────────────
# Must be at least 32 characters long
JWT_SECRET=super_secret_jwt_key_change_in_production_min_32_chars
JWT_ISSUER=https://lagedra.com
JWT_AUDIENCE=https://lagedra.com

# ── Stripe ───────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ── Google Maps ──────────────────────────────────────────────
GOOGLE_MAPS_API_KEY=AIza...

# ── Persona (KYC + Background Check) ────────────────────────
PERSONA_API_KEY=persona_sandbox_...
PERSONA_WEBHOOK_SECRET=persona_webhook_secret_...

# ── Brevo (SMTP relay via MailKit) ───────────────────────────
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_USERNAME=your_brevo_login@example.com
BREVO_SMTP_PASSWORD=your_brevo_smtp_key
BREVO_FROM_EMAIL=noreply@lagedra.com
BREVO_FROM_NAME=Lagedra

# ── MinIO (S3-compatible object storage) ─────────────────────
MINIO_ROOT_USER=lagedra_minio
MINIO_ROOT_PASSWORD=change_me_in_prod_minio
MINIO_BUCKET_NAME=lagedra-evidence

# ── Site URL ─────────────────────────────────────────────────
SITE_URL=http://localhost:3002

# ── Insurance API (Phase 5.6) ────────────────────────────────
INSURANCE_API_BASE_URL=https://api.insuranceprovider.example.com
INSURANCE_API_KEY=your_insurance_api_key
