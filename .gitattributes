# Auto-detect text files and normalise line endings to LF on checkin
* text=auto eol=lf

# Explicitly declare text files
*.cs        text eol=lf
*.csproj    text eol=lf
*.sln       text eol=lf
*.props     text eol=lf
*.targets   text eol=lf
*.json      text eol=lf
*.jsonc     text eol=lf
*.yaml      text eol=lf
*.yml       text eol=lf
*.md        text eol=lf
*.txt       text eol=lf
*.sh        text eol=lf
*.ps1       text eol=lf
*.ts        text eol=lf
*.tsx       text eol=lf
*.js        text eol=lf
*.jsx       text eol=lf
*.css       text eol=lf
*.html      text eol=lf
*.xml       text eol=lf
*.editorconfig text eol=lf
*.gitattributes text eol=lf
*.gitignore text eol=lf
Dockerfile  text eol=lf

